@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure you wnat to delete this department?..</h1>
<br />
<br />
<br />

<form asp-action="Delete" asp-route-id="@Model.Id">
    <div>
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control" readonly />
    </div>
    <div>
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>
    <div>
        <label class="col-form-label" asp-for="HiringDate"></label>
        <input asp-for="HiringDate" class="form-control" readonly />
    </div>
    <input type="submit"value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-light mt-5">Cancel</a>


</form>

