@model IEnumerable<Employee>;


<h1>All Employees</h1>
<br />
<br />
<br />

<a asp-controller="Employee" asp-action="Create" class=" btn btn-primary">Create New Employee</a>

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Address)</th>
                <th>@Html.DisplayNameFor(D => D.Salary)</th>
                <th>@Html.DisplayNameFor(D => D.Emp_type)</th>
                <th>@Html.DisplayNameFor(D => D.IsActive)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var departmwent in Model)
            {
                <tr>
                    <td>@departmwent.Name</td>
                    <td>@departmwent.Age</td>
                    <td>@departmwent.Address</td>
                    <td >@Html.DisplayFor(M=>departmwent.Salary)</td>
                    <td>@Html.DisplayFor(M => departmwent.Emp_type)</td>
                    <td>@Html.DisplayFor(M => departmwent.IsActive)</td>
                    <td>@Html.DisplayFor(M => departmwent.Email)</td>

                    <td>
                        <a  asp-action="Details" asp-route-id="@departmwent.Id" class="btn btn-primary">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>

                    <td>
                         <a asp-action="Edit" asp-route-id="@departmwent.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>

                    <td>
                        <a asp-action="Delete" asp-route-id="@departmwent.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no Employee</h3>
    </div>
}
