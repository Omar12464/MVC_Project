@model IEnumerable<RoleViewModel>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<div class="row justify-content-center align-items-center mt-5">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="searchInp" placeholder="Search By Name" />

        </div>
        <div>
            <input type="submit" value="search" class="btn btn-success" />
        </div>

    </form>
</div>


<h1>All Users</h1>
<br />
<br />
<br />

<a asp-controller="User" asp-action="Create" class=" btn btn-primary">Create New User</a>

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.RoleName)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => user.Id)</td>
                    <td>@Html.DisplayFor(modelItem => user.RoleName)</td>
                    <td>
                        <partial name="_ButtonsPartial" model="@user.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no Employee</h3>
    </div>
}
